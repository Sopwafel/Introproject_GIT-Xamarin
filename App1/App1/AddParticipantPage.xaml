<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.AddParticipantPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Finalize" Clicked="OnFinalizeButtonClicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout VerticalOptions="StartAndExpand" 
                         HorizontalOptions="CenterAndExpand"
                         x:Name="StackLayouyt">
            
                <Label Text="Add participants. Tap a name to remove" />
                <Entry x:Name="participantName" Placeholder="Name" />
                <Button Text="Add" Clicked="OnAddParticipantClicked" />
            
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>