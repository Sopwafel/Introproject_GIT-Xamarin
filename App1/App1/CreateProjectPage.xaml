<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.CreateProjectPage"
             Title="Create new project">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Finalize" Clicked="OnFinalizeButtonClicked" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
        <StackLayout HorizontalOptions="CenterAndExpand"
                     VerticalOptions="StartAndExpand"
                     x:Name="LayoutStack">
            <Label Text="Project name:" />
            <Entry x:Name="ProjectName" Placeholder="Project name" />
            <Button Text="Add Participants" Clicked="OnAddParticipantsClicked" />
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>